<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8">


    <com.example.module_usercenter.ui.custom.DiyToolbar
        android:id="@+id/vip_toolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#0099FF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_vip_pic"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:scaleType="fitXY"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/vip_toolbar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_price_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_vip_pic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="8.5dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_price_container">

        <RelativeLayout
            android:id="@+id/rl_zfb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/iv_zfb"
                android:background="@color/black"
                android:layout_centerVertical="true"
                android:layout_marginLeft="23.5dp"
                android:layout_width="23dp"
                android:layout_height="23dp"/>
            <TextView
                android:layout_marginLeft="9.5dp"
                android:layout_toRightOf="@+id/iv_zfb"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:text="支付宝" />

            <ImageView
                android:id="@+id/scb_zfb"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="23.5dp"
                android:background="@color/black"
             />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_wx"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_wx"
                android:background="@color/black"
                android:layout_centerVertical="true"
                android:layout_marginLeft="23.5dp"
                android:layout_width="23dp"
                android:layout_height="23dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="23.5dp"
                android:layout_toRightOf="@id/iv_wx"
                android:gravity="center"
                android:textStyle="bold"
                android:text="微信" />

            <ImageView
                android:id="@+id/scb_wx"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="23.5dp"
                android:background="@color/black"
                />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_buy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="58dp"
        android:gravity="center"
        android:background="@color/black"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:textSize="16sp"
        android:text="立即购买"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.18" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.82" />



    <LinearLayout
        android:id="@+id/web_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
     />

</androidx.constraintlayout.widget.ConstraintLayout>