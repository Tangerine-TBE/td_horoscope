<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--Loading Dialog-->

    <!--启动页主题-->
    <style name="AppStartTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--冷启动时间更慢 但是点击图标是立即打开视觉效果-->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>


    <!--权限申请字体一号样式-->
    <style name="PermissionStyle_one">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18.5sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--权限申请字体二号样式-->
    <style name="PermissionStyle_two" parent="PermissionStyle_one">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!--退出窗口-->
    <style name="ExitPopup" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_exit_in</item>
        <item name="android:windowExitAnimation">@anim/popup_exit_out</item>
    </style>


    <!--生肖配对-->
    <style name="ZodiacPopup" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_in</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>

    <style name="TextViewBold">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewNormal" parent="TextViewBold">
        <item name="android:textStyle">normal</item>
    </style>


    <style name="TabLayoutTextStyle">
        <item name="android:textSize">18sp</item>
    </style>




</resources>