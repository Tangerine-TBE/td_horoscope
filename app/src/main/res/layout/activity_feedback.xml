<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp">
        <ImageView
            android:id="@+id/barBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_round_arrow_back_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户反馈"
            android:textColor="#ff000000"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/barBack"
            android:layout_marginStart="24dp"/>
    </RelativeLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bar"
        android:padding="16dp">
        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/shape_feedback_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/aaa" />
        <TextView
            android:id="@+id/text_num_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/255字"
            android:textColor="#ffababab"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@id/image1"
            app:layout_constraintEnd_toEndOf="@id/view"
            android:layout_marginEnd="17dp"/>
        <EditText
            android:id="@+id/body"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintStart_toStartOf="@id/view"
            app:layout_constraintEnd_toEndOf="@id/view"
            app:layout_constraintTop_toTopOf="@id/view"
            android:inputType="textMultiLine"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:hint="输入您想要反馈的内容"
            android:textColorHint="@color/black"
            android:background="@null"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:gravity="top"
            android:maxLength="255"
            android:importantForAutofill="no"/>
        <ImageView
            android:id="@+id/image1"
            android:layout_width="48dp"
            android:layout_height="51dp"
            android:src="@drawable/ic_feedback_image_add"
            app:layout_constraintStart_toStartOf="@id/body"
            app:layout_constraintTop_toBottomOf="@id/body"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:id="@+id/image2"
            android:layout_width="48dp"
            android:layout_height="51dp"
            android:src="@drawable/ic_feedback_image_add"
            app:layout_constraintStart_toEndOf="@id/image1"
            app:layout_constraintTop_toTopOf="@id/image1"
            android:layout_marginStart="12dp"/>
        <View
            android:id="@+id/aaa"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image1"
            android:layout_marginTop="16dp" />
        <TextView
            android:id="@+id/tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您的联系方式"
            android:textColor="#ff000000"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="@id/view"
            app:layout_constraintTop_toBottomOf="@id/view"
            android:layout_marginTop="28dp"/>
        <TextView
            android:id="@+id/qq_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ:"
            android:textColor="#ff000000"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/view"
            app:layout_constraintTop_toBottomOf="@id/tip"
            android:layout_marginTop="29dp"/>
        <EditText
            android:id="@+id/qq"
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toEndOf="@id/email_tip"
            app:layout_constraintBottom_toBottomOf="@id/qq_tip"
            app:layout_constraintEnd_toEndOf="@id/view"
            app:layout_constraintBaseline_toBaselineOf="@id/qq_tip"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:textColorHint="#919191"
            android:hint="输入您的QQ号码"
            android:gravity="bottom"
            android:background="@null"
            android:maxLength="10"
            android:maxLines="1"
            android:inputType="number"
            android:importantForAutofill="no"/>
        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#707070"
            app:layout_constraintTop_toBottomOf="@id/qq_tip"
            android:layout_marginTop="9dp"/>
        <TextView
            android:id="@+id/email_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号："
            android:textColor="#ff000000"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/view"
            app:layout_constraintTop_toBottomOf="@id/line1"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@null"
            android:gravity="bottom"
            android:hint="输入您的手机号"
            android:textColor="@color/black"
            android:textColorHint="#919191"
            android:textSize="13sp"
            app:layout_constraintBaseline_toBaselineOf="@id/email_tip"
            app:layout_constraintBottom_toBottomOf="@id/email_tip"
            app:layout_constraintEnd_toEndOf="@id/view"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/email_tip"
            android:maxLines="1"
            android:maxLength="11"
            android:inputType="number"
            android:importantForAutofill="no"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/email_tip"
            android:layout_marginTop="20dp"
            android:background="#707070"/>
        <TextView
            android:id="@+id/btn"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="提交反馈"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"
            android:background="@drawable/shape_permission_bg"
            android:gravity="center"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>