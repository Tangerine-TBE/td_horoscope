<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
         android:layout_marginTop="12dp"
        android:id="@+id/mConsIndex"
        android:overScrollMode="never"
        android:layout_marginLeft="11dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mConsLike"
        android:layout_marginLeft="11dp"
        android:overScrollMode="never"
        android:layout_below="@+id/mConsIndex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mConsDes"
        android:layout_marginTop="16dp"
        android:overScrollMode="never"
        android:layout_marginLeft="11dp"
        android:layout_below="@+id/mConsLike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/mluckNumber"
            android:layout_marginTop="18dp"
            android:text="18"
            android:gravity="center"
            android:layout_alignLeft="@+id/mHint"
            android:layout_alignRight="@+id/mHint"
            android:textSize="18sp"
            android:visibility="gone"
            android:textColor="@color/main_ColorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/mHint"
            android:textSize="11sp"
            android:layout_alignParentRight="true"
            android:text="幸运数字"
            android:layout_marginRight="24dp"
            android:layout_below="@+id/mluckNumber"
            android:textColor="#010101"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </RelativeLayout>

</androidx.core.widget.NestedScrollView>