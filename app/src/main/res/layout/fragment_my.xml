<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/mLoginInclude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11.5dp"
        android:layout_marginLeft="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:src="@mipmap/icon_no_login"
            android:id="@+id/mLoginPic"
            android:layout_width="53dp"
            android:layout_height="53dp"
          />

        <TextView
            android:id="@+id/mLoginId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_alignTop="@+id/mLoginPic"
            android:text="登录/注册"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/mLoginPic"
      />
        <TextView
            android:id="@+id/mLoginHint"
            android:layout_alignLeft="@+id/mLoginId"
            android:layout_alignBottom="@+id/mLoginPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录数据不丢失，享受更多功能"
            android:layout_toRightOf="@+id/mLoginPic"
            />



    </RelativeLayout>
    <ImageView
        android:id="@+id/mVipTitle"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="11.5dp"
        android:layout_marginRight="11.5dp"
        android:src="@mipmap/icon_vip_ad"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="58dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:overScrollMode="never"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="33.5dp"
            android:id="@+id/mSetContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <FrameLayout
        android:background="@color/black"
        android:id="@+id/mMyAdContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>